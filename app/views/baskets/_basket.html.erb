<div id="basket" class="d-flex justify-content-center p-2 bd-highlight">
  <div id="lines" class="flex-column">
    <%= render partial: 'baskets/edit' %>
  </div>
</div>

<div class="d-flex justify-content-center p-2 bd-highlight">
  <div id="total_price" class="flex-column">
    <em><%= t(:total_amount) %>: </em><%= price(@order.amount) %>
  </div>
</div>

<div class="d-flex justify-content-center p-2 bd-highlight">
  <div id="place_order" class="justify-content-center">
    <% if current_client %>
      <%= link_to t(:place_order), orders_path, method: :post, class: "btn btn-primary" %>
    <% else %>
      <%= link_to t(:place_order), new_client_registration_path(origin: "basket") %>
    <% end %>
  </div>
</div>
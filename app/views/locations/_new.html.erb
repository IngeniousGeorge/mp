<div id="newAddress" class="collapse" data-parent="#content">

  <%= form_with model: location, url: url, id: "new_address", html: { class: "form-dashboard d-flex flex-column align-items-start bg-light rounded-lg" } do |f| %>
    <div class="form-group form-dashboard-field">
      <%= f.label t(:name), "Name", class: "label-dashboard" %>
      <%= f.text_field :name, class: "form-control input-dashboard" %>
    </div>
    <div class="form-group form-dashboard-field">
      <%= f.label t(:recipient), "recipient", class: "label-dashboard" %>
      <%= f.text_field :recipient, class: "form-control input-dashboard" %>
    </div>
    <div class="form-group form-dashboard-field">
      <%= f.label t(:street), "Street", class: "label-dashboard" %>
      <%= f.text_field :street, class: "form-control input-dashboard" %>
    </div>
    <div class="form-group form-dashboard-field">
      <%= f.label t(:city), "City", class: "label-dashboard" %>
      <%= f.text_field :city, class: "form-control input-dashboard" %>
    </div>
    <div class="form-group form-dashboard-field">
      <%= f.label t(:state), "State", class: "label-dashboard" %>
      <%= f.text_field :state, class: "form-control input-dashboard" %>
    </div>
    <div class="form-group form-dashboard-field">
      <%= f.label t(:country), "Country", class: "label-dashboard" %>
      <%= f.text_field :country, class: "form-control input-dashboard" %>
    </div>
    <div class="form-group form-dashboard-field">
      <%= f.label t(:postal_code), "Postal Code", class: "label-dashboard" %>
      <%= f.text_field :postal_code, class: "form-control input-dashboard" %>
    </div>
    <div class="form-group form-dashboard-field">
      <%= f.label t(:delivery), "Delivery", class: "label-dashboard" %>
      <%= f.check_box :delivery, class: "check-dashboard" %>
    </div>
    <div class="form-group form-dashboard-field">
      <%= f.label t(:billing), "Billing", class: "label-dashboard" %>
      <%= f.check_box :billing, class: "check-dashboard" %>
    </div>
    <%= f.hidden_field :owner_type, value: owner_type %>
    <%= f.hidden_field :owner_id, value: owner_id %>
    <div class="action submit-dahsboard">
      <%= f.submit t(:create), class: "btn btn-dark" %>
    </div>
  <% end %>
</div>
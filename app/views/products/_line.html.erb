<%= product.name + " " + product.price.to_s %>
<br/>

<%= form_with model: line, url: basket_line_path(line) do |f| %>
  <%= f.hidden_field :product_id, value: line.product_id %>
  <%= f.hidden_field :basket_id, value: line.basket_id %>
  <%= f.label "Quantity: "%>
  <%= f.number_field :quantity, value: line.quantity %>
  <%= f.submit "Edit" %>
  <%= f.submit "Remove" %>
<% end %>
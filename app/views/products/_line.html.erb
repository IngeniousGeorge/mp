<%= link_to product.name, product_path(product), class: "product-link" %>
-
<%= price(product.price) %>


<%= form_with model: line, url: basket_line_path(line) do |f| %>
  <%= f.hidden_field :product_id, value: line.product_id %>
  <%= f.hidden_field :basket_id, value: line.basket_id %>
  <%= f.label t(:quantity) %>
  <%= f.number_field :quantity, value: line.quantity, class: "edit-number rounded" %>
  <%= f.submit t(:change), class: "btn btn-secondary" %>
  <%= f.submit t(:remove), class: "btn btn-danger" %>
<% end %>
total:
<%= price(line.line_amount) %><br/>
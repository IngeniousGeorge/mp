<span>New Product</span>

<%= form_for [:seller, @product] do |f| %>
  <%= f.label :name, "Name" %>
  <%= f.text_field :name %>
  <%= f.label :category, "Category" %>
  <%= f.text_field :category %>
  <%= f.label :key_words, "Key words" %>
  <%= f.text_field :key_words %>
  <%= f.label :description, "Description" %>
  <%= f.text_field :description %>
  <%= f.label :price, "Price" %>
  <%= f.text_field :price %>
  <%= f.hidden_field :seller_id, value: @seller_id %>
  <%= f.submit "Create" %>
<% end %>

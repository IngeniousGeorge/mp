<%= link_to product do %>
  <h3><%= product.name %></h3>
  <%= image_tag(url_for(product.logo), size: size_small) %>
<% end %>

<%= form_with model: BasketLine.new, url: basket_lines_path do |f| %>
  <%= f.hidden_field :product_id, value: product.id %>
  <%= f.hidden_field :basket_id, value: basket.id %>
  <%= f.hidden_field :quantity, value: 1 %>
  <%= f.submit "Add to basket" %>
<% end %>